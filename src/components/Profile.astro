---
import { avatarUrl, name, bio } from '../const'; // Adjust the import path as necessary

---

<card>
  <img src={ avatarUrl } alt="Avatar" />
  <h1>{ name }</h1>
  <p>{ bio }</p>
</card>

<style>
card {
    
    border-radius: 8px;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
    
    
}

card img {
    border-radius: 50%;
    max-width: 160px;  
    max-height: 160px; 
    width: auto;
    height: auto;
    margin-bottom: 12px;
}
</style>