---
import "../styles/global.css";
const { image, title, color } = Astro.props;
---

<card style={`background-color: ${color || ''};`}>
  {image && <img src={image} alt="Card Image" class="card-image" />}
  <span>{title && <h1>{title}</h1>}<slot /></span>
</card>

<style>
  card {
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    margin-bottom: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  card span {
    margin: 40px;
    margin-top: 20px;
  }

  .card-image {
    width: 100%;
    border-radius: 8px 8px 0 0;
    object-fit: cover;
    height: 350px;
    opacity: 1;
    transition: all 0.2s ease-in-out;
    mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0) 100%
    );
  }
</style>
